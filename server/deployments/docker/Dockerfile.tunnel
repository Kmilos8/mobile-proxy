FROM golang:1.23-alpine AS builder

WORKDIR /app
COPY go.mod go.sum* ./
RUN go mod download || true

COPY . .
RUN go mod tidy && CGO_ENABLED=0 GOOS=linux go build -o /tunnel ./cmd/tunnel

FROM alpine:3.19
RUN apk --no-cache add ca-certificates iptables iproute2
COPY --from=builder /tunnel /tunnel

CMD ["/tunnel"]
